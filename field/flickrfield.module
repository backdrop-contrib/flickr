/**
 * Implements hook_field_schema().
 */
function flickrfield_field_schema($field) {
  if ($field['type'] == 'flickrfield') {
    $columns = array(
      'id' => array(
        'type' => 'varchar',
        'length' => 64,
        'not null' => FALSE,
        'sortable' => TRUE,
      ),
      'type' => array(
        'type' => 'varchar',
        'length' => 10,
        'not null' => FALSE,
        'sortable' => TRUE,
      ),
      'nsid' => array(
        'type' => 'varchar',
        'length' => 64,
        'not null' => FALSE,
        'sortable' => TRUE,
      ),
    );
  }
  elseif ($field['type'] == 'flickrfield_photoset') {
    $columns = array(
      'flickrid' => array(
        'type' => 'varchar',
        'length' => 64,
        'not null' => FALSE,
        'sortable' => TRUE,
      ),
    );
  }
  return array('columns' => $columns);
}

